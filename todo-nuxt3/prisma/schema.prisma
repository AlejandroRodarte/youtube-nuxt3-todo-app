generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = "mysql://root@127.0.0.1:3306/nuxt3-todo-db"
  relationMode = "prisma"
}

model Todo {
  id        String   @id
  ownerId   String
  label     String   @db.VarChar(255)
  done      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
  user      User     @relation(fields: [ownerId], references: [id])

  @@index([ownerId])
}

model User {
  id        String   @id
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
  todos     Todo[]
}
